    <com.tracup.library.view.IconView
        android:id="@+id/tracup_btn_toolbar_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:gravity="center"
        android:clickable="false"
        android:layout_alignParentLeft="true"
        android:textSize="16sp"
        app:tracup_icon="back"
        android:textColor="@color/tracup_theme_tinting_color_light"/>


    <TextView
        style="@style/TracupToolbarTitle"
        android:id="@+id/tracup_fragment_title"
        android:layout_toRightOf="@id/tracup_btn_toolbar_left"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/tracup_text_color_grey"
        android:text="hello"/>

